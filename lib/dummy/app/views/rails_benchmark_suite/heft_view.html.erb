<h1>Dashboard for <%= user.name %></h1>
<ul>
  <% posts.each do |post| %>
    <li>
      <strong><%= post.title %></strong>
      <p><%= post.body.truncate(50) %></p>
      <small>Views: <%= number_with_delimiter(post.views) %></small>
    </li>
  <% end %>
</ul>
<footer>Generated at <%= Time.now.to_s %></footer>
